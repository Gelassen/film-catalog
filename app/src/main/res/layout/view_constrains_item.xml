<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="183dp"
    android:layout_marginRight="8dp"
    android:layout_marginLeft="8dp"
    android:background="@drawable/ic_card_background"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:layout_widthPercent="35%"
        app:layout_heightPercent="100%">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ic_launcher_background"
            android:scaleType="centerCrop"
            />

    </FrameLayout>

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:fontFamily="sans-serif-medium"
        android:lineSpacingExtra="4dp"
        android:maxLines="2"
        android:textColor="#dd000000"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_marginTopPercent="0.3%"
        app:layout_marginLeftPercent="39%"
        app:layout_widthPercent="75%"
        app:layout_marginRightPercent="0.03%"
        tools:text="Бегущий по лезвию 2048" />

    <TextView
        android:id="@+id/desc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/footer"
        android:layout_below="@+id/title"
        android:ellipsize="end"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="2dp"
        android:textColor="#8a000000"
        android:textSize="14sp"
        app:layout_marginBottomPercent="6%"
        app:layout_marginLeftPercent="39%"
        app:layout_marginRightPercent="0.03%"
        app:layout_widthPercent="75%"
        tools:text="Отставной детектив Рик Декард вновь восстановлен в полиции Лос-Анджелеса для поиска возглавляемой Роем Батти группы киборгов, совершившей побег из космической колонии на Землю." />

    <FrameLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_marginLeftPercent="39%"
        app:layout_marginRightPercent="0.03%"
        app:layout_marginBottomPercent="0.04%"
        app:layout_widthPercent="75%"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_calendar"
            android:drawablePadding="4dp"
            android:gravity="center_vertical"
            android:textColor="#8a000000"
            android:textSize="14sp"
            tools:text="5th of March" />

        <ImageView
            android:id="@+id/fav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="right|center_vertical"
            android:background="@drawable/ic_fav_level_list" />
    </FrameLayout>

